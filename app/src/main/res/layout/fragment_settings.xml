<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/design_element_circle_left"
        android:layout_width="421dp"
        android:layout_height="452dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/design_element_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/design_element_moon"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:rotation="270"
        android:scaleType="fitXY"
        android:src="@drawable/design_element_moon"
        app:layout_constraintBottom_toTopOf="@+id/UserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <ImageView
        android:id="@+id/design_element_circle_right"
        android:layout_width="722dp"
        android:layout_height="600dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="416dp"
        android:scaleType="fitXY"
        android:src="@drawable/design_element_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="194dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:fontFamily="@font/baumans"
        android:textColor="@color/black"

        android:text="Settings"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/UserName"
        android:layout_width="152dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="User"
        android:textColor="@color/black"
        android:fontFamily="@font/alatsi"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhotoCard" />

    <Button
        android:id="@+id/nameChangeBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/btnPurple"
        android:textColor="@color/white"
        android:text="Name Change"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserName"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/takePhotoBtn"
        android:layout_width="150dp"
        android:backgroundTint="@color/btnPurple"
        android:textColor="@color/white"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="15dp"
        android:text="Take a photo"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accDeleteBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/accDeleteBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:text="Delete account"
        android:textColor="@color/white"
        android:backgroundTint="@color/btnPurple"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameChangeBtn"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/apply_changes"
        android:text="Apply changes"
        android:textColor="@color/white"
        android:backgroundTint="@color/btnPurple"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takePhotoBtn"
        app:layout_constraintVertical_bias="0.312" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/arrow_back_24"
        android:id="@+id/homePageBtn"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="608dp"
        android:text="LogOut"
        android:textColor="@color/white"
        android:backgroundTint="@color/btnPurple"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profilePhotoCard"
        android:layout_width="255dp"
        android:layout_height="255dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />



        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>