<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignUpFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    android:weightSum="100">

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="348dp"
        android:layout_height="174dp"
        android:layout_marginTop="76dp"
        android:layout_weight="40"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EntryEmailSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Entry your email"
        android:ems="20"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EntryNameSignUp"
        android:hint="Entry User Name"
        android:ems="20"
        />

    <EditText
        android:id="@+id/EntryPasswordSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="Entry your password"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/EntryPassConfSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="30"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/ButtonSignUp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="SignUp"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/ButtonBackToLogIn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="LogIn"
        android:textSize="25dp"
        />


</LinearLayout>